#!/bin/bash

RUN_DIR=/var/vcap/sys/run/redis-server
LOG_DIR=/var/vcap/sys/log/redis-server
PIDFILE=${RUN_DIR}/pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    echo $$ > $PIDFILE

    cd /var/vcap/packages/redis-server/

    exec /var/vcap/packages/redis-server/something.bin \
      >>  $LOG_DIR/redis-server.stdout.log \
      2>> $LOG_DIR/redis-server.stderr.log

    ;;

  stop)
    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
